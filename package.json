{
    "name": "vscode-tcmerge",
    "displayName": "vscode-tcmerge",
    "description": "easily integrate git and github with vscode",
    "version": "0.0.3",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.commitAndPush",
        "onCommand:extension.createPullRequest",
        "onCommand:extension.createReadyBranch",
		"onCommand:extension.updateGithubConfig",
		"onCommand:extension.accessToken",
        "workspaceContains:.git"
    ],
    "main": "./out/extension",
    "publisher": "hilleer",
    "contributes": {
        "configuration": [
            {
                "title": "vscode-tcmerge configuration",
                "description": "configuration for vscode-tcmerge extension",
                "properties": {
                    "vscode-tcmerge.repositoryName": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "default": null,
                        "description": "repository name of the github repository"
                    },
                    "vscode-tcmerge.repositoryOwner": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "default": null,
                        "description": "repository owner of the github repository"
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "extension.commitAndPush",
                "title": "tcmerge: Commit and push"
            },
            {
                "command": "extension.createPullRequest",
                "title": "tcmerge: Create pull request"
            },
            {
                "command": "extension.updateGithubConfig",
                "title": "tcmerge: Update git info"
            },
            {
                "command": "extension.createReadyBranch",
                "title": "tcmerge: Create ready branch"
			},
			{
				"command": "extension.accessToken",
				"title": "tcmerge: Github access token"
			}
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "2.6.1",
        "vscode": "1.1.21",
        "tslint": "5.8.0",
        "@types/node": "8.10.25",
        "@types/mocha": "2.2.42"
    },
    "dependencies": {
        "@types/node-fetch": "2.1.2",
        "@types/open": "0.0.29",
        "node-fetch": "2.2.1",
        "open": "0.0.5"
	},
	"repository": {
		"url": "https://github.com/hilleer/vscode-tcmerge",
		"type": "git"
	},
	"bugs": {
		"url": "https://github.com/hilleer/vscode-tcmerge/issues/new"
	}
}
