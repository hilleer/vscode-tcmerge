{
    "name": "vscode-git",
    "displayName": "vscode-git",
    "description": "easily integrate git with vscode",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.sayHello",
        "onCommand:extension.commitAndPush",
        "onCommand:extension.createPullRequest",
        "onCommand:extension.updateGithubConfig",
        "workspaceContains:.git"
    ],
    "main": "./out/extension",
    "publisher": "Daniel Hillmann",
    "contributes": {
        "configuration":[
            {
                "title": "vscode-git configuration",
                "description": "configurationb for vscode-git extension",
                "properties": {
                    "vscode-git.repositoryName": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "default": null,
                        "description": "repository name of the github repository"
                    },
                    "vscode-git.repositoryOwner": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "default": null,
                        "description": "repository owner of the github repository"
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "Hello World"
            },
            {
                "command": "extension.commitAndPush",
                "title": "Git: Commit and push"
            },
            {
                "command": "extension.createPullRequest",
                "title": "Git: Create pull request"
            },
            {
                "command": "extension.updateGithubConfig",
                "title": "Git: Update configuration info"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "@types/node-fetch": "2.1.2",
        "node-fetch": "2.2.1"
    }
}
