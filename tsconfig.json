{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": [
			"es2017",
			"dom"
		],
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			]
		},
		"baseUrl": ".",
		"sourceMap": true,
		"noImplicitAny": true,
		"noUnusedLocals": true, 
		"noImplicitReturns": true, 
		"noUnusedParameters": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}