{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"rootDir": "src",
		"lib": [
			"es2017",
			"dom"
		],
		"sourceMap": true,
		"noImplicitAny": true,
		"noUnusedLocals": true, 
		"noImplicitReturns": true, 
		"noUnusedParameters": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}